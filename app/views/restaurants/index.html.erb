<h1>My list of restaurants</h1>

<hr>
 <h2> <%= link_to 'New restaurant', new_restaurant_path %> </h2>
<hr>


<% @restaurants.each do |restaurant| %>

  <h2> <%= restaurant.id %> -- name: <%= restaurant.name %></h2>
  <p> address: <%= restaurant.address %></p>
  <p> phone number: <%= restaurant.phone_number %></p>
  <p> Category: <%= restaurant.category %></p>
  <p> reviews: <% restaurant.reviews.each do |review| %>
  <%= review.content %> <%= review.rating %> |
  <% end  %> </p>
  <p> <%= link_to 'Show', restaurant_path(restaurant) %>  </p>
  <hr>
<% end %>


